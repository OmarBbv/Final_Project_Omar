            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Açıqlama</label>
                <input asp-for="Description" class="form-control" id="answer" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Location" class="control-label">Ünvan</label>
                <input asp-for="Location" class="form-control" id="answer" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonCount" class="control-label">Müştəri sayı</label>
                <input asp-for="PersonCount" class="form-control" id="answer" />
                <span asp-validation-for="PersonCount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label">Qiymət</label>
                <input asp-for="Price" class="form-control" id="answer" />
